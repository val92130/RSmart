<Window x:Class="Server.App.Map"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map" Height="800" Width="800">
    <Grid  MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.Background>
            <ImageBrush ImageSource="back2.jpg"/>
        </Grid.Background>
        <Canvas x:Name="grid" HorizontalAlignment="Left" Height="750" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            
        </Canvas>
        <Button x:Name="addObstacleButton" Content="Add obstacle" HorizontalAlignment="Left" Margin="279,10,0,0" VerticalAlignment="Top" Width="100" Click="addObstacleButton_Click"/>
        <Button x:Name="removeObstacleButton" Content="Remove obstacle" HorizontalAlignment="Left" Width="100" Margin="413,10,0,0" VerticalAlignment="Top" Click="removeObstacleButton_Click"/>

    </Grid>
</Window>
